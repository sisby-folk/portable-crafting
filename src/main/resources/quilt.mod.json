{
	"schema_version": 1,
	"quilt_loader": {
		"group": "folk.sisby",
		"id": "portable-crafting",
		"version": "${version}",
		"metadata": {
			"name": "Portable Crafting",
			"description": "Allows using the crafting table in your inventory via a hotkey or tab.",
			"contributors": {
				"Sisby Folk": "Co-Authors"
			},
			"contact": {
				"homepage": "https://modrinth.com/mod/portable-crafting",
				"issues": "https://github.com/sisby-folk/portable-crafting/issues",
				"sources": "https://github.com/sisby-folk/portable-crafting"
			},
			"icon": "assets/portable_crafting/icon.png"
		},
		"intermediate_mappings": "net.fabricmc:intermediary",
		"entrypoints": {
			"init": "folk.sisby.portable_crafting.PortableCrafting",
			"client_init": "folk.sisby.portable_crafting.PortableCraftingClient"
		},
		"depends": [
			{
				"id": "minecraft",
				"versions": ">={mc}"
			},
			{
				"id": "quilt_loader",
				"versions": ">={ql}"
			},
			{
				"id": "quilted_fabric_api",
				"versions": ">=${qfapi}"
			},
			{
				"id": "inventorytabs",
				"versions": ">=${inventoryTabs}",
				"optional": true
			}
		]
	},
	"mixin": "portable_crafting.mixins.json",
	"access_widener": "portable_crafting.accesswidener"
}
