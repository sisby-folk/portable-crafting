{
  "schemaVersion": 1,
  "id": "portable-crafting",
  "version": "${version}",
  "name": "Portable Crafting",
  "description": "Allows opening crafting tables without placing them.",
  "authors": [
    "Sisby folk"
  ],
  "contact": {
    "homepage": "https://modrinth.com/mod/portable-crafting",
    "issues": "https://github.com/sisby-folk/portable-crafting/issues",
    "sources": "https://github.com/sisby-folk/portable-crafting"
  },
  "license": "LGPL-3.0-only",
  "icon": "assets/portable_crafting/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "folk.sisby.portable_crafting.PortableCrafting"
    ],
    "client": [
      "folk.sisby.portable_crafting.PortableCraftingClient"
    ]
  },
  "depends": {
    "fabricloader": ">=${fl}",
    "minecraft": ">=${mc}",
    "fabric-api": ">=${fapi}"
  },
  "suggests": {
    "inventory-tabs": ">=${tabs}"
  },
  "breaks": {
    "inventory-tabs": "<${tabs}"
  },
  "mixins": ["portable_crafting.mixins.json"]
}
